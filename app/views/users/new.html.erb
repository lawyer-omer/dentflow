<% provide(:title, "Sign up")%>


<div class="relative container mx-auto mt-5 px-5">
  <div class="flex flex-col justify-center items-center mx-auto w-full">
    <div class="flex flex-col justify-center items-center w-96">
      <%= form_with(model: @user) do |f| %>
        <%= f.label "Name" %><br>
        <%= f.text_field :name %><br>

        <%= f.label "Email" %><br>
        <%= f.text_field :email %><br>

        <%= f.label "Pass" %><br>
        <%= f.text_field :password %><br>

        <%= f.label "Confirm your pass" %><br>
        <%= f.text_field :password_confirmation %><br>

        <%= f.submit "Create my account", class: "mt-5 pointer-events-auto ml-8 rounded-md bg-indigo-600 py-2 px-3 text-[0.8125rem] font-semibold leading-5 text-white hover:bg-indigo-500"%>
      <% end %>
    </div>
  </div>
</div>
 